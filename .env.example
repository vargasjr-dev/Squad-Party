# Database connection string
DATABASE_URL=postgres://user:password@localhost:5432/squadparty

# Anthropic API key for Game Studio AI features
# Required for the Game Studio to generate custom mini-games via Claude
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here

# Admin users configuration
# Format: username1:password1,username2:password2
# These users will be auto-promoted to admin on first login
# Leave empty or omit to disable auto-admin setup
ADMIN_USERS=admin:changeme

# Server port (optional, defaults to 5000)
# PORT=5000
